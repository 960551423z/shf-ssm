<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.zq.dao.HouseUserDao">

    <sql id="columns">
        select id, house_id, name, phone, sex, id_no, create_time, update_time, is_deleted
        from mydb.hse_house_user
    </sql>

    <!-- 查询房东   -->
    <select id="getHouseUsersByHouseId" resultType="houseUser">
        <include refid="columns"/>
        where house_id = #{houseId} and is_deleted = 0
    </select>

    <!--新增-->
    <insert id="insert" parameterType="houseUser">
        insert into mydb.hse_house_user(house_id, name, phone, sex, id_no)
        values(#{houseId},#{name},#{phone},#{sex},#{idNo})
    </insert>


    <!--根据id 查询    -->
    <select id="getById" resultType="houseUser">
        <include refid="columns"/>
        where id = #{id}
    </select>

    <!-- 修改 -->
    <update id="update" parameterType="houseUser">
        update mydb.hse_house_user
            <set>
                <if test="name != null and name != ''">
                    name = #{name},
                </if>
                <if test="phone != null and phone != ''">
                    phone = #{phone},
                </if>
                <if test="sex != null">
                    sex = #{sex},
                </if>
                <if test="idNo != null and idNo != ''">
                    id_No = #{idNo},
                </if>
            </set>
            where id  = #{id}
    </update>



    <delete id="delete">
        update mydb.hse_house_user set is_deleted = 1 where id = #{id}
    </delete>





</mapper>